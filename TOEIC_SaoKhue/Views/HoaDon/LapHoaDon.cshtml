
@{
    ViewBag.Title = "LapHoaDon";
}

<div>
    <div class="text-center">
        <h3>Lập hóa đơn</h3>
    </div>
    <form style="margin-top: 30px" id="laphd">
        <div class="form-group row">
            <label for="hocvien" class="col-xs-4">Học viên</label>
            <div class="col-xs-8">
                <input name="hocvien" placeholder="Mã học viên" class="form-control" id="hoadon-mahv" />
                <div id="hoadon-hocvien" style="margin-top: 10px; display: none;">
                    <p>
                        <i>Tên học viên:</i> <span id="hoadon-tenhv"></span>
                    </p>
                    <p>
                        <i>Số điện thoại:</i> <span id="hoadon-sdthv"></span>
                    </p>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="lops" class="col-xs-4">Lớp</label>
            <div class="col-xs-8">
                <input name="lops" placeholder="Mã lớp 1, Mã lớp 2, ..." class="form-control" id="hoadon-malop" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lops" class="col-xs-4">Đăng ký:</label>
            <div class="col-xs-8">
                <input name="dks" placeholder="Mã đăng ký 1, Mã đăng ký 2, ..." class="form-control" id="hoadon-madk" />
            </div>
        </div>
        <table class="table table-bordered" style="margin-top: 10px">
            <thead>
                <tr>
                    <th>
                        Mã lớp
                    </th>
                    <th>
                        Thời gian học
                    </th>
                    <th>
                        Học phí
                    </th>
                </tr>
            </thead>
            <tbody id="hoadon-lops">
            </tbody>
        </table>
        <div class="form-group text-center">
            <div class="btn-group">
                <a href="@Url.Action("Index", "HoaDon")" class="btn btn-danger">Hủy</a>
                <input type="submit" class="btn btn-success" value="Đã thu học phí" id="hoadon-submit" />
            </div>
        </div>
    </form>
</div>

